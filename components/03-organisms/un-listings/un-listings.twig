{% if directory %}
  {% set item_attributes = attributes ? attributes : create_attribute() %}
  {% set item_attributes_text = item_attributes.addClass('un-listings-box') %}
{% else %}
  {% set item_attributes = attributes ? attributes : create_attribute() %}
  {% set item_attributes_text = item_attributes %}
{% endif %}
<div {{ item_attributes }}>
  <div class="un-listings-box-aside">{{ aside|raw }}</div>
  <div class="un-listings-box-inner">
    <div class="un-listings-box-main">
      <div class="item-type">{{ type|raw }}</div>
      <div class="item-title">{{ title }}</div>
      <div class="item-summary">{{ body|raw }}</div>
    </div>
    {% if extra %}
      <div class="un-listings-box-extra">{{ extra|raw }}</div>
    {% endif %}
  </div>
</div>