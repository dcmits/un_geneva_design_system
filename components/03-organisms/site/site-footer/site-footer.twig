{% set footer__base_class = 'footer' %}
{% if not current_language %}
  {% set current_language = 'en' %}
{% endif %}
{% set logo_src = (directory ? un_geneva_design_system_path ~ '/images/' : './') ~ 'logo/logo-' ~ current_language ~ '-reverse.svg' %}

<footer id="footer" {{ bem(footer__base_class) }}>
    <div class="container">
      <div {{ bem(footer__base_class, ['inner']) }}>
        <div {{ bem(footer__base_class, ['top']) }}>
          <div class="un-logo">
            <img src="{{ logo_src }}" alt="" />
          </div>
          {% block footer_social %}
            <div class="region region--footer-social">
              {% block social_menu %}
                <div class="block">
                  <span class="h2 visually-hidden block-title" id="block-un-geneva-design-system-social-heading">Social</span>
                  <nav aria-labelledby="block-un-geneva-design-system-social-heading" class="block">
                    {% include "@molecules/menus/social/social-menu.twig" with {
                      menu_class: "social-menu",
                      items: social_menu,
                    } %}
                  </nav>
                </div>
              {% endblock %}
              <div class="block">
                <a class="button button--primary" href="">Donate</a>
              </div>
            </div>
          {% endblock %}
        </div>
        {% block footer_menu %}
          <div class="region region--footer-menu">
            <div id="block-footer-menu" class="block">
              <span class="h2 visually-hidden block-title" id="block-footer-menu-heading">Footer menu</span>
              <nav aria-labelledby="block-un-geneva-theme-social-heading" class="block">
                {% include "@molecules/menus/_menu.twig" with {
                  menu_class: "menu",
                  items: footer_menu,
                } %}
              </nav>
            </div>
          </div>
        {% endblock %}
      </div>
    </div>
</footer>