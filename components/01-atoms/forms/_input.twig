{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
 #}
{% if element['#type'] in ['checkbox','radio', 'button', 'submit'] %}
 {% set input_attributes = attributes %}
{% else %}
 {% set input_attributes = attributes.addClass('form-item__textfield') %}
{% endif %}
<input{{ input_attributes }} />{{ children }}
