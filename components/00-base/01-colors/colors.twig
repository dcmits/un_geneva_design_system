{% set colors_base_class = "cl-colors" %}
{% set variables_base_class = "cl-variables" %}

<div {{ bem(colors_base_class) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 2,
    heading: 'Color variables',
  } %}

  {% for color in variables %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading_level: 3,
      heading: color.name,
    } %}
    <ul {{ bem('list', [], variables_base_class) }}">
      {% for variant in color.variants %}
        <li {{ bem("item", [variant.name], variables_base_class) }}>
          <span {{ bem("title", colors_base_class) }}>{{ variant.name }}</span> <br/>
          <span {{ bem("value", colors_base_class) }}></span> <br/>
        </li>
      {% endfor %}
    </ul>
  {% endfor %}
</div>
